<head></head>
<body>
 
 <%= flash[:notice] %>
<h1>Books</h1>

 <table>
  
 <thead>
 <tr>
   <th>
    Title
   </th>
   <th>
    Body
   </th>
   <th colspan="3"></th>
  </tr>
 </thead>

  <tbody>
    <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%=link_to "編集", edit_book_path(book.id) %></td>
    <td><%=link_to "詳細", book_path(book.id) %></td>
    <td><%= link_to "削除",book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
   </tr>
   <%end%>
 
</tbody>
 </table>
</body>



    <% if @newbook.errors.any? %>
     <%= @newbook.errors.count %>error
     <ul>
     <% @newbook.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
    <% end %>
    
  </ul>

<h2>New book</h2>
<%= form_with model: @newbook, url: '/books', method: :post do |f| %>

<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
 <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  
  <% end %>