<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= flash[:notice] %>
<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
 <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <%=link_to "Index", "/books" %>
<% end %>